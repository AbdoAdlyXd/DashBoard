<Template.BL.Models.DepartmentVM>

@{
    ViewBag.Title = "Department";
}

<style>
    th{
        text-align:center !important;
    }
</style>

<link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<div class="block-header">
    <h2>Employees</h2>
</div>

<br />


<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create New Department</a>

<br />


<table class="table table-striped table-bordered table-hover text-center font-weight-bold">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>salary</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.salary</td>
            <td><a asp-action="Details" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>
            <td><a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
            <td><a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
        }
    </tbody>
</table>






