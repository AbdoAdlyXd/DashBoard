@model Template.BL.Models.DepartmentVM


@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<label asp-for="Id">Department Id</label>
<input type="text" class="form-control" asp-for="Id" disabled />
<br />


<label asp-for="Name">Department Name</label>
<input type="text" class="form-control" asp-for="Name" disabled />
<br />

<label asp-for="salary">Department Code</label>
<input type="text" class="form-control" asp-for="salary" disabled />
<br />


<center>
    <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back To Data</a>
    <a asp-controller="Department" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
</center>



